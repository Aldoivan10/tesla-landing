---
import Card from '../components/Card.astro';
import ListItem from '../components/ListItem.astro';
import Tab from '../components/Tab.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Coches eléctricos, energía solar y límpia | Tesla">
	<main>
		<header id="#header" class="px-5 pt-2 z-10 absolute flex flex-col top-0 left-0 w-full transition-all duration-300 text-white bg-white bg-opacity-0 h-12">

			<div class="flex justify-between align-middle [&>nav]:z-10">
				<div class="grow basis-0 ps-7 flex items-center">
					<svg class="h-3 w-32" 
						viewBox="0 0 342 35" 
						xmlns="http://www.w3.org/2000/svg">
							<path d="M0 .1a9.7 9.7 0 0 0 7 7h11l.5.1v27.6h6.8V7.3L26 7h11a9.8 9.8 0 0 0 
							7-7H0zm238.6 0h-6.8v34.8H263a9.7 9.7 0 0 0 6-6.8h-30.3V0zm-52.3 6.8c3.6-1 
							6.6-3.8 7.4-6.9l-38.1.1v20.6h31.1v7.2h-24.4a13.6 13.6 0 0 0-8.7 7h39.9v-21h-31.2v-7h24zm116.2 28h6.7v-14h24.6v14h6.7v-21h-38zM85.3 
							7h26a9.6 9.6 0 0 0 7.1-7H78.3a9.6 9.6 0 0 0 7 7zm0 13.8h26a9.6 9.6 0 0 0 7.1-7H78.3a9.6 9.6 0 0 0 7 
							7zm0 14.1h26a9.6 9.6 0 0 0 7.1-7H78.3a9.6 9.6 0 0 0 7 7zM308.5 7h26a9.6 9.6 0 0 0 7-7h-40a9.6 9.6 0 0 0 7 7z" 
							fill="currentColor"></path>
					</svg>
				</div>
				
				<nav class="text-sm">
					<ul class="flex justify-evenly [&>li>button]:px-4 [&>li>button]:py-2 [&>li>button]:font-bold">
						<Tab text='Veh&iacute;culos' tab='vehicles'/>
						<Tab text='Energ&iacute;a' tab='energy'/>
						<Tab text='Carga' tab='charge'/>
						<Tab text='Descubrir' tab='discover'/>
						<Tab text='Tienda' tab='shop'/>
					</ul>
				</nav>
	
				<nav class="flex pe-7 grow basis-0 justify-end items-center [&>ul>li]:h-6 [&>ul>li]:w-6 [&>ul>li]:mx-1">
					<ul class="flex items-center">
						<li>
							<a href="#">
